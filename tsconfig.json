{
  "compilerOptions": {
    "target": "ES2019",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS"
  },
  "include": ["src/**/*", "tests/**/*"]
}
